generator client {
  provider = "prisma-client-js"
  //output   = "../src/prisma/generated/client"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  SUPER_ADMIN
  HR_MANAGER
  LEARNER
}

model User {
  id                  String         @id @unique @default(uuid()) @db.Uuid // ← ADDED @db.Uuid
  username            String         @unique
  email               String         @unique
  fullName            String
  password            String         @db.VarChar(255)
  timezone            String         @default("UTC")
  status              UserStatus     @default(ACTIVE)
  authProvider        AuthProvider   @default(LOCAL)
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  userRole            UserRole       @default(LEARNER)
  devices             Device[]
  groupMembers        GroupMember[]
  coursesCreated      Course[]       @relation("CreatedBy")
  assignmentsAssigner Assignment[]   @relation("Assigner")
  attempts            Attempt[]
  certificates        Certificate[]
  auditLogsActor      AuditLog[]     @relation("Actor")
  scormPackages       ScormPackage[]
  assignments         Assignment[]

  @@map("users")
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DEACTIVATED
}

enum AuthProvider {
  LOCAL
  SSO
}

model Device {
  id           String     @id @unique @default(uuid()) @db.Uuid // ← ADDED @db.Uuid
  userId       String     @db.Uuid
  deviceType   DeviceType
  deviceToken  String
  lastSyncAt   DateTime?
  registeredAt DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceToken])
  @@map("devices")
}

enum DeviceType {
  PWA
  MOBILE
  DESKTOP
}

model Group {
  id       String  @id @unique @default(uuid()) @db.Uuid // ← ADDED @db.Uuid
  orgId    String? @db.Uuid
  name     String
  metadata Json?

  members     GroupMember[]
  assignments Assignment[]

  @@map("groups")
}

model GroupMember {
  id      String    @id @default(uuid()) @db.Uuid // ← ADDED @db.Uuid
  groupId String    @db.Uuid
  userId  String    @db.Uuid
  role    GroupRole @default(MEMBER)

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@map("group_members")
}

enum GroupRole {
  MEMBER
  OWNER
}

// Courses: Main learning content
model Course {
  id               String     @id @unique @default(uuid()) @db.Uuid // ← ADDED @db.Uuid
  title            String
  description      String?
  scormPackageId   String?    @db.Uuid
  visibility       Visibility @default(INTERNAL)
  version          String     @default("1.0")
  durationEstimate Int? // In minutes
  createdBy        String     @db.Uuid
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  // Relations
  scormPackage ScormPackage? @relation(fields: [scormPackageId], references: [id])
  creator      User          @relation("CreatedBy", fields: [createdBy], references: [id])
  assignments  Assignment[]
  attempts     Attempt[]
  certificates Certificate[]

  @@map("courses")
}

enum Visibility {
  PUBLIC
  INTERNAL
}

// ScormPackages: SCORM content storage
model ScormPackage {
  id           String       @id @unique @default(uuid()) @db.Uuid // ← ADDED @db.Uuid
  filename     String
  storagePath  String // S3 key
  manifestJson Json // Extracted for queries
  scormVersion ScormVersion
  encrypted    Boolean      @default(false)
  checksum     String // For integrity
  uploadedBy   String       @db.Uuid
  uploadedAt   DateTime     @default(now())

  courses  Course[]
  attempts Attempt[]
  uploader User?     @relation(fields: [uploadedBy], references: [id]) // Optional if anon upload

  @@unique([checksum]) // Prevent dupes
  @@map("scorm_packages")
}

enum ScormVersion {
  V1_2
  V2004
}

// Assignments: Task assignments to users/groups
model Assignment {
  id              String    @id @unique @default(uuid()) @db.Uuid // ← ADDED @db.Uuid
  courseId        String    @db.Uuid
  assignerId      String    @db.Uuid
  assigneeUserId  String?   @db.Uuid
  assigneeGroupId String?   @db.Uuid
  dueDate         DateTime?
  recurrenceRule  String? // RRULE string (e.g., iCalendar format)
  createdAt       DateTime  @default(now())

  course        Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assigner      User   @relation("Assigner", fields: [assignerId], references: [id])
  assigneeUser  User?  @relation(fields: [assigneeUserId], references: [id])
  assigneeGroup Group? @relation(fields: [assigneeGroupId], references: [id])

  @@unique([courseId, assigneeUserId]) // Or adjust for groups/recurrence
  @@map("assignments")
}

// Attempts: User progress on courses/SCORM
model Attempt {
  id             String        @id @unique @default(uuid()) @db.Uuid
  userId         String        @db.Uuid
  courseId       String        @db.Uuid
  scormPackageId String?       @db.Uuid
  attemptNumber  Int           @default(1)
  status         AttemptStatus @default(INCOMPLETE)
  scoreRaw       Float? // 0-100
  startedAt      DateTime?
  completedAt    DateTime?
  lastSyncedAt   DateTime?

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  course       Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
  scormPackage ScormPackage? @relation(fields: [scormPackageId], references: [id])
  interactions Interaction[]
  suspendData  SuspendDatum? // 1:1 for blob

  @@unique([userId, courseId, attemptNumber])
  @@map("attempts")
}

enum AttemptStatus {
  INCOMPLETE
  COMPLETED
  PASSED
  FAILED
}

// Interactions: SCORM interactions (consider separate table per type if volume high; here as flat for simplicity)
model Interaction {
  id               String   @id @unique @default(uuid()) @db.Uuid
  attemptId        String   @db.Uuid
  interactionIndex Int
  interactionType  String // e.g., 'choice', 'true-false'
  correctResponse  Json? // Array/string
  learnerResponse  Json? // Flexible
  timestamp        DateTime

  attempt Attempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  @@unique([attemptId, interactionIndex])
  @@map("interactions")
}

// SuspendData: SCORM suspend data (1:1 per attempt; Json for blob)
model SuspendDatum {
  id          String @id @unique @default(uuid()) @db.Uuid
  attemptId   String @unique @db.Uuid
  suspendBlob Json // Compressed/serialized state

  attempt Attempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  @@map("suspend_data")
}

// Certificates: Issued certs
model Certificate {
  id               String   @id @unique @default(uuid()) @db.Uuid
  userId           String   @db.Uuid
  courseId         String   @db.Uuid
  templateId       String? // FK to templates if separate
  issuedAt         DateTime @default(now())
  pdfPath          String // S3 path
  verificationHash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId]) // One per user/course
  @@map("certificates")
}

// AuditLogs: Event logging
model AuditLog {
  id         String   @id @unique @default(uuid()) @db.Uuid
  eventType  String
  actorId    String   @db.Uuid
  targetType String
  targetId   String   @db.Uuid
  payload    Json?
  createdAt  DateTime @default(now())

  actor User? @relation("Actor", fields: [actorId], references: [id])

  @@index([eventType, createdAt])
  @@map("audit_logs")
}
