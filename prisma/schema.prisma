generator client {
  provider = "prisma-client-js"
  //output   = "../src/prisma/generated/client"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  SUPER_ADMIN
  HR_MANAGER
  LEARNER
}

enum Department {
  HR
  ENGINEERING
  SALES
  MARKETING
  FINANCE
  OPERATIONS
  IT
  CUSTOMER_SUPPORT
  LEGAL
  ADMINISTRATION
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DEACTIVATED
}

enum AuthProvider {
  LOCAL
  SSO
}

enum DeviceType {
  PWA
  MOBILE
  DESKTOP
}

enum GroupRole {
  MEMBER
  OWNER
}

enum Visibility {
  PUBLIC
  INTERNAL
}

enum ScormVersion {
  V1_2
  V2004
}

enum AttemptStatus {
  INCOMPLETE
  COMPLETED
  PASSED
  FAILED
}

model User {
  id           String         @id @default(cuid()) @db.VarChar(25)
  username     String?        @unique
  email        String         @unique
  fullName     String
  password     String         @db.VarChar(255)
  timezone     String         @default("UTC")
  status       UserStatus     @default(ACTIVE)
  authProvider AuthProvider   @default(LOCAL)
  userRole     UserRole       @default(LEARNER)
  department   Department?
  phoneNumber  String?        @unique
  metadata     Json?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  orgId        String?        @db.VarChar(25)
  groupId      String?        @db.VarChar(25)
  organization Organization?  @relation("UserInOrg", fields: [orgId], references: [id])
  createdOrgs  Organization[] @relation("CreatedBy")

  devices             Device[]
  groupMembers        GroupMember[]
  coursesCreated      Course[]       @relation("CreatedBy")
  assignmentsAssigner Assignment[]   @relation("Assigner")
  attempts            Attempt[]
  certificates        Certificate[]
  auditLogsActor      AuditLog[]     @relation("Actor")
  scormPackages       ScormPackage[]
  assignments         Assignment[]

  @@map("users")
}

model Organization {
  id        String    @id @default(cuid()) @db.VarChar(25)
  name      String
  metadata  Json?
  createdBy String    @db.VarChar(25)
  createdAt DateTime  @default(now())
  status    OrgStatus @default(ACTIVE)
  users     User[]    @relation("UserInOrg")
  creator   User      @relation("CreatedBy", fields: [createdBy], references: [id])

  @@map("organizations")
}

enum OrgStatus {
  ACTIVE
  INACTIVE
}

model Device {
  id           String     @id @default(cuid()) @db.VarChar(25)
  userId       String     @db.VarChar(25)
  deviceType   DeviceType
  deviceToken  String
  lastSyncAt   DateTime?
  registeredAt DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceToken])
  @@map("devices")
}

model Group {
  id       String  @id @default(cuid()) @db.VarChar(25)
  orgId    String? @db.VarChar(25)
  name     String
  metadata Json?

  members     GroupMember[]
  assignments Assignment[]

  @@map("groups")
}

model GroupMember {
  id      String    @id @default(cuid()) @db.VarChar(25)
  groupId String    @db.VarChar(25)
  userId  String    @db.VarChar(25)
  role    GroupRole @default(MEMBER)

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@map("group_members")
}

// Courses: Main learning content
enum CourseStatus {
  DRAFT
  PUBLISHED
}

model Course {
  id               String       @id @default(cuid()) @db.VarChar(25)
  title            String // Required
  description      String? // Optional
  tags             Json? // Optional array, e.g., ["beginner"]
  visibility       Visibility? // Optional (null = Internal)
  version          String? // Optional (null = "1.0")
  status           CourseStatus @default(DRAFT)
  durationEstimate Int?
  scormPackageId   String?      @db.VarChar(25)
  createdBy        String       @db.VarChar(25)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  modules      Module[]      @relation("CourseModules") // Named for nested
  scormPackage ScormPackage? @relation(fields: [scormPackageId], references: [id])
  creator      User          @relation("CreatedBy", fields: [createdBy], references: [id])
  assignments  Assignment[]
  attempts     Attempt[]
  certificates Certificate[]

  @@map("courses")
}

model Module {
  id        String   @id @default(cuid()) @db.VarChar(25)
  name      String // Required
  courseId  String   @db.VarChar(25)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course  Course   @relation("CourseModules", fields: [courseId], references: [id], onDelete: Cascade) // FIXED: Matching name
  lessons Lesson[] @relation("ModuleLessons") // Named for nested lessons

  @@index([courseId]) // Perf
  @@map("modules")
}

model Lesson {
  id             String   @id @default(cuid()) @db.VarChar(25)
  title          String // Required
  description    String? // Optional
  scormPackageId String?  @db.VarChar(25) // Optional SCORM
  moduleId       String   @db.VarChar(25)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  module       Module        @relation("ModuleLessons", fields: [moduleId], references: [id], onDelete: Cascade) // FIXED: Matching name
  scormPackage ScormPackage? @relation(fields: [scormPackageId], references: [id])

  @@index([moduleId]) // Perf
  @@map("lessons")
}

model ScormPackage {
  id           String       @id @default(cuid()) @db.VarChar(25)
  filename     String
  storagePath  String
  manifestJson Json
  scormVersion ScormVersion
  encrypted    Boolean      @default(false)
  checksum     String       @unique
  uploadedBy   String       @db.VarChar(25)
  uploadedAt   DateTime     @default(now())

  courses  Course[]
  lessons  Lesson[]
  attempts Attempt[]
  uploader User?     @relation(fields: [uploadedBy], references: [id])

  @@map("scorm_packages")
}

// Assignments: Task assignments to users/groups
model Assignment {
  id              String    @id @default(cuid()) @db.VarChar(25)
  courseId        String    @db.VarChar(25)
  assignerId      String    @db.VarChar(25)
  assigneeUserId  String?   @db.VarChar(25)
  assigneeGroupId String?   @db.VarChar(25)
  dueDate         DateTime?
  recurrenceRule  String? // RRULE string (e.g., iCalendar format)
  createdAt       DateTime  @default(now())

  course        Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assigner      User   @relation("Assigner", fields: [assignerId], references: [id])
  assigneeUser  User?  @relation(fields: [assigneeUserId], references: [id])
  assigneeGroup Group? @relation(fields: [assigneeGroupId], references: [id])

  @@unique([courseId, assigneeUserId]) // Or adjust for groups/recurrence
  @@map("assignments")
}

// Attempts: User progress on courses/SCORM
model Attempt {
  id             String        @id @default(cuid()) @db.VarChar(25)
  userId         String        @db.VarChar(25)
  courseId       String        @db.VarChar(25)
  scormPackageId String?       @db.VarChar(25)
  attemptNumber  Int           @default(1)
  status         AttemptStatus @default(INCOMPLETE)
  scoreRaw       Float? // 0-100
  startedAt      DateTime?
  completedAt    DateTime?
  lastSyncedAt   DateTime?

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  course       Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
  scormPackage ScormPackage? @relation(fields: [scormPackageId], references: [id])
  interactions Interaction[]
  suspendData  SuspendDatum? // 1:1 for blob

  @@unique([userId, courseId, attemptNumber])
  @@map("attempts")
}

// Interactions: SCORM interactions (consider separate table per type if volume high; here as flat for simplicity)
model Interaction {
  id               String   @id @default(cuid()) @db.VarChar(25)
  attemptId        String   @db.VarChar(25)
  interactionIndex Int
  interactionType  String // e.g., 'choice', 'true-false'
  correctResponse  Json? // Array/string
  learnerResponse  Json? // Flexible
  timestamp        DateTime

  attempt Attempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  @@unique([attemptId, interactionIndex])
  @@map("interactions")
}

// SuspendData: SCORM suspend data (1:1 per attempt; Json for blob)
model SuspendDatum {
  id          String @id @default(cuid()) @db.VarChar(25)
  attemptId   String @unique @db.VarChar(25)
  suspendBlob Json // Compressed/serialized state

  attempt Attempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  @@map("suspend_data")
}

// Certificates: Issued certs
model Certificate {
  id               String   @id @default(cuid()) @db.VarChar(25)
  userId           String   @db.VarChar(25)
  courseId         String   @db.VarChar(25)
  templateId       String? // FK to templates if separate
  issuedAt         DateTime @default(now())
  pdfPath          String // S3 path
  verificationHash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId]) // One per user/course
  @@map("certificates")
}

// AuditLogs: Event logging
model AuditLog {
  id         String   @id @default(cuid()) @db.VarChar(25)
  eventType  String
  actorId    String   @db.VarChar(25)
  targetType String
  targetId   String   @db.VarChar(25)
  payload    Json?
  createdAt  DateTime @default(now())

  actor User? @relation("Actor", fields: [actorId], references: [id])

  @@index([eventType, createdAt])
  @@map("audit_logs")
}
